#include <iostream> 
using namespace std;
//declarations
void greet();
float readRadius();
float findArea(float radius);
void printResult (float radius, float area);
void signoff();
float radius;
float area;
const float PI = 3.14159;

int main() { 
  //Call functions
  greet ();
  readRadius)();
  findArea();
  printResult();
  signoff();
  return 0; 
}

void greet () { //prints greeting
  cout << "Welcome to area calculation!" << endl;
}
float readRadius (float radius) { //reads appropriate radius
 cout << "Please enter a positive radius." << endl;
 cin >> radius;
  if (radius < 0) {
    do {
      cout << "The value must be positive." << endl;
      cin >> radius;
    } while (radius < 0);
  } else {
  }
  return radius;
}
float findArea (float radius) { //calculates area
  area = PI * radius * radius;
  return area;
}
void printResult (float radius, float area) { //prints results
  cout << "The radius of " << radius << " gives an area of " 
  << area << endl;
}
void signoff() { //signsoff
  cout << "Have a good day!" << endl;
}
