#include <iostream> 
using namespace std;
//declarations
bool cont = true;
void greet();
string name;
void signoff(string name);
int waistMeasurement();
int waist;
int legLength();
int leg;
float highTolerance();
float tolerance;
float inseamCalculation(int waist);
float inseam;


int main() { 
  //Call functions
  do {
  greet ();
  waistMeasurement();
  legLength();
  highTolerance();
  cout << waist << leg << tolerance << inseam << endl;
  cout << "Would you like to (1) enter measurements again or (0) quit" << endl;
  cin >> cont;
  } while (cont = true);
  signoff(name);
  return 0; 
}

void greet () { //prints greeting
  cout << "Hello! What is your name?" << endl;
  cin >> name;
  cout << "Nice to help you, " << name << endl;
  return;
}
int waistMeasurement () {
 cout << "Please enter your waist measurement" << endl;
 cin >> waist;
  if (waist <= 0) {
    do {
      cout << "The value must be positive." << endl;
      cin >> waist;
    } while (waist <= 0);
  }
  return waist;
}
int legLength () {
 cout << "Please enter your leg length" << endl;
 cin >> leg;
  if (leg <= 0) {
    do {
      cout << "The value must be positive." << endl;
      cin >> leg;
    } while (leg <= 0);
  }
  return leg;
}
float highTolerance () {
 cout << "Please enter your high-water tolerance." << endl;
 cin >> tolerance;
  if (tolerance <= 0) {
    do {
      cout << "The value must be positive." << endl;
      cin >> tolerance;
    } while (tolerance <= 0);
  }
  return tolerance;
}
float inseamCalculation(int waist) {
  const short WIRATIO = 0.9;
  inseam = waist * WIRATIO;
  return inseam;
}
void signoff(string name) {
  cout << "Goodbye " << name << endl;
  exit(1);
}
